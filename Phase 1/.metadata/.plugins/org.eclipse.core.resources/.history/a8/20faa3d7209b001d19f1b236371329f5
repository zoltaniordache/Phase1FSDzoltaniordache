		import java.util.Scanner;
public class main {

	public static void main(String[] args) {
		// decLaring variables here
		int n;
		System.out.println("Files overview application\nVersion 1.0.0\nDeveloped by Zoltan Iordache\nWelcome to Lockers Pvt. Ltd' application. ");

		
		
		
		// creating scanner obiect here
		Scanner sc = new Scanner(System.in);
		// running infinite loop
		do {
		// Displaying the set of quiz options
		System.out.println("Please choose one option from the bello list: ");
		System.out.println("1. Show all the files in ascending order\n2. Add a new file\n3. Delete an existing file \n4. Search an existing file\n5. Exist program");
		// reading input from user
		System.out.println("Enter your choice(1/3/3/4/5)7? ");
		n = sc.nextInt();
		switch (n) {
		  case 1:
		    System.out.println("Show all the files in ascending order");
		    break;
		  case 2:
		    System.out.println("Add a new file");
		    break;
		  case 3:
		    System.out.println("Delete an existing file");
		    break;
		  case 4:
		    System.out.println("Search an existing file");
		    break;
		  case 5:
		    System.out.println("Exist program");
		    break;
		}
		}while(n>5);
			
		}


}
